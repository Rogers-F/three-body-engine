{
  "name": "three-body-desktop",
  "private": true,
  "version": "0.2.0",
  "type": "module",
  "main": "electron/main.cjs",
  "description": "Three-Body Engine desktop application",
  "author": "Three-Body Team",
  "repository": "https://github.com/Rogers-F/three-body-engine",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "electron": "electron .",
    "dist": "npm run build && electron-builder"
  },
  "dependencies": {
    "@xyflow/react": "^12.0.0",
    "framer-motion": "^12.0.0",
    "lucide-react": "^0.500.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "recharts": "^2.15.0",
    "zustand": "^5.0.0"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.4.0",
    "electron": "^40.6.0",
    "electron-builder": "^26.8.1",
    "tailwindcss": "^4.0.0",
    "typescript": "~5.7.0",
    "vite": "^6.0.0"
  },
  "build": {
    "appId": "com.threebody.engine",
    "productName": "Three-Body Engine",
    "directories": {
      "output": "release"
    },
    "publish": null,
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "win": {
      "target": ["nsis", "portable"],
      "extraResources": [
        { "from": "../engine/threebody.exe", "to": "threebody.exe" },
        { "from": "../config.example.json", "to": "config.json" }
      ]
    },
    "mac": {
      "target": ["dmg", "zip"],
      "extraResources": [
        { "from": "../engine/threebody", "to": "threebody" },
        { "from": "../config.example.json", "to": "config.json" }
      ]
    },
    "linux": {
      "target": ["AppImage", "tar.gz"],
      "extraResources": [
        { "from": "../engine/threebody", "to": "threebody" },
        { "from": "../config.example.json", "to": "config.json" }
      ]
    }
  }
}
